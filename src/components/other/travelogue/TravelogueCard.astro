---
import type { ContentsImage } from "@lib/types";
interface Props {
  title: string;
  description: string;
  href: string;
  thumb: ContentsImage;
}

const { title, description, href, thumb } = Astro.props;
---

<a
  class="travelogue-card-link"
  href={`${import.meta.env.BASE_URL}travelogue/${href}`}
>
  <div class="travelogue-card">
    <div class="img-container">
      <img src={thumb.url} alt={thumb.alt} />
    </div>
    <div class="card-contents">
      <h3>{title}</h3>

      <div class="overview">
        <p>{description}</p>
      </div>
    </div>
  </div>
</a>

<style>
  /* このリンクの親はグリッドボックスである前提なので, その大きさ指定やgap等の影響を受ける. */
  .travelogue-card-link {
    display: block;
    width: 100%;
    border: 1px solid var(--main-font-color);
    border-radius: 3px;
    background-color: rgba(var(--main-bg-color-params), 0.6);
    overflow: hidden;
  }
  .travelogue-card {
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
  }
  .travelogue-card:hover {
    background-color: var(--main-font-color);
    color: var(--main-bg-color);
  }
  .img-container {
    border: 4px solid var(--main-font-color);
    height: 10rem;
    width: 100%;
    clip: rect(0, 0, 0, 0);
  }
  .img-container > img {
    object-fit: cover;
    width: 100%;
    height: 100%;
  }
  .card-contents {
    padding: 0.5rem 1rem;
  }
</style>

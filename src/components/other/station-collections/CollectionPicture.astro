---
// ほぼブログ用のコピペだがマイナーチェンジもあり
import { Image } from "astro:assets";

import type { BlogImageProps } from "@lib/contents/blog";

interface Props extends Required<BlogImageProps> {}
const { src, width, height, alt, caption, ...attrs } = Astro.props;
---

<figure>
  <Image
    src={src}
    width={width}
    height={height}
    format="webp"
    alt={alt}
    {...attrs}
  />
  {
    caption ? (
      <figcaption style={`max-width: ${width}px`}>{caption}</figcaption>
    ) : null
  }
</figure>

<style>
  figure {
    border: 3px double var(--main-font-color);
    border-bottom: 0;
    margin: 1.7rem 1rem;
    display: table;
    max-width: 100%;
  }
  figure > img {
    height: 15rem;
    width: auto;
    object-fit: contain;
    vertical-align: bottom;
    max-width: 100%;
    @media (max-width: 1024px) {
      height: auto;
    }
  }
  figcaption {
    caption-side: bottom;
    display: table-caption;
    background-clip: padding-box;
    border: 3px double var(--main-font-color);
    border-top: 0;
    background-color: rgba(var(--main-font-color-params), 0.8);
    color: var(--main-bg-color);
    padding: 3px;
    text-align: center;
  }
</style>

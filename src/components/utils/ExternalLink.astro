---
/** 別タブで開くリンクを作成する。 */
import { getCollection } from "astro:content";

interface Props {
  href: string;
  /** `true`の場合はtarget指定を消す */
  disableBlank?: boolean;
  rest: Record<string, any>;
}

const { href, disableBlank = false, rest } = Astro.props;
---

{
  disableBlank ? (
    <a href={href} {...rest}>
      <slot />
    </a>
  ) : (
    <a href={href} target="_blank" rel="noreferrer noopener" {...rest}>
      <slot />
      <span class="icon">
        <svg
          version="1.1"
          xmlns="http://www.w3.org/2000/svg"
          xmlns:xlink="http://www.w3.org/1999/xlink"
          preserveAspectRatio="xMidYMid meet"
          viewBox="0 0 16 16"
          width="1em"
          height="1em"
        >
          <g fill={`darkslateblue`}>
            <path d="M 7,2C 7,2 7.8,2 7.8,2.9C 7.8,2.9 7.8,3.8 7,3.8H 5.4C 5.4,3.8 4.4,3.8 4.4,4.8V 11C 4.4,11 4.4,12 5.4,12H 10.6C 10.6,12 11.6,12 11.6,11V 9C 11.6,9 11.6,8 12.8,8C 12.8,8 14,8 14,9V 11.8C 14,11.8 14,13.8 11.4,13.8H 4.6C 4.6,13.8 2,13.8 2,11.8V 4C 2,4 2,2 4.6,2H 7Z" />
            <path d="M 9,1H 14C 14,1 15,1 15,2V 7C 15,7 14.5,8 13.6,7L 12.5,5.5L 9,9C 9,9 8,10.2 7,9C 7,9 5.8,8 7,7L 10.5,3.5L 9,2.4C 9,2.4 8,1.5 9,1Z" />
          </g>
        </svg>
      </span>
    </a>
  )
}

<style>
  .icon {
    display: inline;
    line-height: 1rem;
  }
</style>

---
import { Image } from "@astrojs/image/components";

interface Props {
  src: string;
  width: number;
  alt: string;
  caption?: string;
}
const { src, width, height, alt, caption, ...attrs } = Astro.props;
---

<figure>
  <Image src={src} width={width} height={height} alt={alt} {...attrs} />
  {caption ? <figcaption>{caption}</figcaption> : null}
</figure>

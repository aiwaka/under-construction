---
import { Image } from "astro:assets";

import type { BlogImageProps } from "@lib/contents/blog";

interface Props extends BlogImageProps {}
const { src, width, height, alt, caption, ...attrs } = Astro.props;
// altがなければキャプションを使い, それもなければ適当に設定するが警告を出す.
const resultAlt = alt !== undefined ? alt : caption ? caption : "_";
if (!caption && !alt) {
  console.warn(
    `\n[BlogImage.astro] in "${src}", "alt" text was not provided for an <Image> component.\n`,
  );
}
---

<figure>
  <Image
    src={src}
    width={width}
    height={height}
    format="webp"
    alt={resultAlt}
    {...attrs}
  />
  {caption ? <figcaption>{caption}</figcaption> : null}
</figure>

<style>
  figure {
    border: 3px double var(--main-font-color);
    border-bottom: 0;
    margin: 1.7rem 1rem;
    display: table;
    height: fit-content;
    max-width: 100%;
  }
  figure > img {
    object-fit: contain;
    vertical-align: bottom;
    max-width: 100%;
    @media (max-width: 1024px) {
      height: auto;
    }
  }
  figcaption {
    caption-side: bottom;
    display: table-caption;
    background-clip: padding-box;
    border: 3px double var(--main-font-color);
    border-top: 0;
    background-color: rgba(var(--main-font-color-params), 0.8);
    color: var(--main-bg-color);
    padding: 3px;
    text-align: center;
  }
</style>

---
interface Props {
  text: string;
}
const { text } = Astro.props;
---

<span class="hover-text-container" ontouchstart="">
  <span class="hover-text">
    {text}
  </span>
  <slot />
</span>

<style>
  .hover-text-container {
    display: inline-block;
    height: 1lh;
    background-color: rgba(var(--main-color-params), 0.15);
    border-radius: 3px;
  }
  .hover-text {
    display: none;
    position: absolute;
    translate: -10%;
    bottom: 1.1lh;
    width: 120%;
    background-color: var(--main-color);
    color: var(--main-bg-color);
    border-radius: 3px;
    padding: 0.4rem 1rem;
  }
  @media (hover: hover) {
    .hover-text-container:hover {
      & .hover-text {
        display: block;
      }
    }
  }
  @media (hover: none) {
    .hover-text-container:active {
      & .hover-text {
        display: block;
      }
    }
  }
</style>

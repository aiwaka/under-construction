---
import BlogPageCard from "@components/blog/BlogPageCard.astro";
import type { BlogPostEntry } from "@lib/contents/blog";

interface Props {
  cardList: BlogPostEntry[];
  hideTags?: boolean;
}
const { cardList, hideTags = false } = Astro.props;
---

<div class="contents-card-container">
  {
    cardList.map((entry) => {
      return <BlogPageCard entry={entry} hideTags={hideTags} />;
    })
  }
</div>

<style>
  .contents-card-container {
    margin: 1.4rem auto;
    padding-bottom: 2rem;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    row-gap: 1.4rem;
    column-gap: 5%;
  }
  @media (max-width: 1024px) {
    .contents-card-container {
      grid-template-columns: repeat(1, 1fr);
    }
  }
</style>

---
export async function getStaticPaths() {
  const posts = await Astro.glob("../../contents/*.md");

  return posts.map((post) => ({
    params: {
      slug: post.frontmatter.slug,
    },
    props: {
      post,
    },
  }));
}

const { Content } = Astro.props.post;
---

<article>
  <Content />
</article>

---
import { Image } from "@astrojs/image/components";

import BaseLayout from "@layouts/BaseLayout.astro";
import ProfileSection from "@components/sections/ProfileSection.astro";
import SkillSection from "@components/sections/SkillSection.astro";
import WorksSection from "@components/sections/WorksSection.astro";
import ContactSection from "@components/sections/ContactSection.svelte";
import "@fontsource/noto-sans-jp/700.css";

const illustBgSettings = {
  src: `${import.meta.env.BASE_URL}img/my-icon.png`,
  alt: "illust-background",
  quality: 50,
  width: 1024,
  height: 1024,
};
---

<BaseLayout title="Under Construction">
  <Image
    class={"background-image"}
    src={illustBgSettings.src}
    alt={illustBgSettings.alt}
    quality={illustBgSettings.quality}
    width={illustBgSettings.width}
    height={illustBgSettings.height}
    format={"webp"}
    loading="eager"
    fetchpriority="high"
  />
  <div class="title-container">
    <div class="title-card">
      <h1 class="title">UNDER CONSTRUCTION</h1>
      <p class="subtitle">Aiwaka's profile website</p>
    </div>
  </div>
  <div class="slided-bg-image-container">
    <Image
      class={"slided-bg-image"}
      src={`${import.meta.env.BASE_URL}img/blue_2.png`}
      alt="light-background"
      width={1200}
      height={900}
      format={"webp"}
    />
  </div>
  <main class="main-container">
    <div class="contents-container">
      <ProfileSection />
      <SkillSection />
      <WorksSection />
      <ContactSection />
    </div>
  </main>
</BaseLayout>


  .background-image {
    pointer-events: none;
    user-drag: none;
    -webkit-user-drag: none;
    position: fixed;
    top: 7lvh;
    right: 0;
    width: 100lvh;
    height: 100lvh;
    @media (max-width: 1024px) {
      right: -20lvh;
    }
  }

  .title-container {
    z-index: 1;
    position: absolute;
    top: 0;
    height: 100lvh;
    width: 100%;
    mix-blend-mode: exclusion;
  }
  .title-card {
    position: sticky;
    top: 50lvh;
    height: 100lvh;
    width: 80vw;
    margin: -70lvh auto;
    text-align: center;
    letter-spacing: 0.5rem;
    color: var(--main-bg-color);
    > .title {
      font-size: 3.2rem;
      font-weight: 700;
      @media (max-width: 1024px) {
        letter-spacing: 0.3rem;
        font-size: max(7vw, 1.6rem);
      }
    }
  }
  .slided-bg-image-container {
    overflow: hidden;
    top: 0;
    position: sticky;
    margin-top: 100lvh;
    height: 100lvh;
    width: 100%;
    > .slided-bg-image {
      pointer-events: none;
      user-drag: none;
      -webkit-user-drag: none;
      height: 100%;
      width: 100%;
      object-fit: cover;
    }
  }
  .main-container {
    width: 70%;
    margin: auto;
    @media (max-width: 1024px) {
      width: 90%;
    }
    z-index: 2;
    position: relative;
  }
  .contents-container {
    position: sticky;
    width: 100%;
  }

  :global(.section-item) {
    margin: 5rem auto;
  }
</style>

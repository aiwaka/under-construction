---
import SiteFooter from "@components/SiteFooter.astro";
import SiteHeader from "@components/SiteHeader.svelte";
import "@fontsource/noto-sans-jp";
import "@fontsource/noto-sans-jp/700.css";
import "@fontsource/noto-serif-jp";

const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1);

export interface Props {
  title: string;
}

const { title } = Astro.props;

const bgColor = Astro.url.pathname.startsWith("/blog")
  ? "var(--main-bg-color)"
  : "black";
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <SiteHeader client:only currentRoute={currentPath} />
    <slot />
    <SiteFooter />
  </body>
</html>
<script>
  if (window) {
  }
</script>

<style is:global lang="postcss" define:vars={{ bgColor }}>
  *,
  *::before,
  *::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
    position: relative;
  }
  html {
    scroll-behavior: smooth;
    scroll-padding-top: 8rem;
    -webkit-text-size-adjust: 100%;
    word-break: normal;
    -moz-tab-size: 4;
    text-rendering: optimizeLegibility;
    -webkit-font-smoothing: antialiased;
    tab-size: 4;
    @media (max-width: 512px) {
      scroll-padding-top: 10rem;
    }
  }
  :root {
    --header-height: 6rem;
    --mobile-header-height: 4.6rem;
    --mobile-nav-height: 1.8rem;

    --main-color-params: 72, 61, 139;
    --main-bg-params: 244, 255, 255;

    --main-color: rgb(var(--main-color-params));
    --main-bg-color: rgb(var(--main-bg-params));
  }
  body {
    box-sizing: border-box;
    min-height: 100dvh;
    color: var(--main-color);
    background: var(--main-bg-color);
    transition: color 0.5s, background-color 0.5s;
    font-family: "Noto Sans JP", sans-serif;
    background-color: var(--bgColor);
  }
  a {
    color: inherit;
    text-decoration: none;
  }

  code {
    font-family: "Noto Sans Mono";
    background-color: lightgray;
    padding: 0 0.4rem;
    border-radius: 3px;
  }
  pre > code {
    background-color: transparent;
  }
  pre {
    background-color: lightgray;
    padding: 2rem 3rem;
    border-radius: 10px;
  }
</style>
